<div class="container">
  <div class="ui page grid">
    <div class="ui sixteen column centered row">
      <div class="main six wide column">
        <div class="ui vertical segment">
          <div class="ui big header">Acceso</div>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <div class="field">
                  <%= f.input :email, required: false, autofocus: true %>
                </div>
                <div class="field">
                  <%= f.input :password, label: "Contraseña", required: false %>
                </div>
                <% if false # TMP-DEMO %>
                    <div class="field">
                      <%= f.input :remember_me, label: "No cerrar sesión", as: :boolean if devise_mapping.rememberable? %>
                    </div>
                <% end %>
              </div>
              <div class="form-actions">
                <%= f.button :submit, "Entrar" %>
              </div>
            <% end %>
            <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
