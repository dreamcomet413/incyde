              </div>  
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Cambiar mi contrase単a" %>
            </div>
            <% end %>
            <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>